<div class="container">
  <h1>New game</h1>

  <div class="d-flex">
    <% @grid.each do |letter| %>
      <%= letter %>
    <% end %>
  </div>

<form action="score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid.join(", ") %>
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit">
</form>
</div>
